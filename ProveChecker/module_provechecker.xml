<?xml version="1.0" encoding="UTF-8"?>
<project name="module_provechecker" default="compile.module.provechecker">
  <dirname property="module.provechecker.basedir" file="${ant.file.module_provechecker}"/>
  
  <property name="module.jdk.home.provechecker" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.provechecker" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.provechecker" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.provechecker" value="${compiler.args}"/>
  
  <property name="provechecker.output.dir" value="${module.provechecker.basedir}/out/production/ProveChecker"/>
  <property name="provechecker.testoutput.dir" value="${module.provechecker.basedir}/out/test/ProveChecker"/>
  
  <path id="provechecker.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="provechecker.module.production.classpath">
    <path refid="${module.jdk.classpath.provechecker}"/>
    <pathelement location="${idea.home}/lib/junit-4.10.jar"/>
  </path>
  
  <path id="provechecker.runtime.production.module.classpath">
    <pathelement location="${provechecker.output.dir}"/>
    <pathelement location="${idea.home}/lib/junit-4.10.jar"/>
  </path>
  
  <path id="provechecker.module.classpath">
    <path refid="${module.jdk.classpath.provechecker}"/>
    <pathelement location="${provechecker.output.dir}"/>
    <pathelement location="${idea.home}/lib/junit-4.10.jar"/>
  </path>
  
  <path id="provechecker.runtime.module.classpath">
    <pathelement location="${provechecker.testoutput.dir}"/>
    <pathelement location="${provechecker.output.dir}"/>
    <pathelement location="${idea.home}/lib/junit-4.10.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.provechecker">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.provechecker">
    <patternset refid="excluded.from.module.provechecker"/>
  </patternset>
  
  <path id="provechecker.module.sourcepath">
    <dirset dir="${module.provechecker.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.provechecker" depends="compile.module.provechecker.production,compile.module.provechecker.tests" description="Compile module ProveChecker"/>
  
  <target name="compile.module.provechecker.production" depends="register.custom.compilers" description="Compile module ProveChecker; production classes">
    <mkdir dir="${provechecker.output.dir}"/>
    <javac2 destdir="${provechecker.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.provechecker}/javac">
      <compilerarg line="${compiler.args.provechecker}"/>
      <bootclasspath refid="provechecker.module.bootclasspath"/>
      <classpath refid="provechecker.module.production.classpath"/>
      <src refid="provechecker.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.provechecker"/>
    </javac2>
    
    <copy todir="${provechecker.output.dir}">
      <fileset dir="${module.provechecker.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.provechecker.tests" depends="register.custom.compilers,compile.module.provechecker.production" description="compile module ProveChecker; test classes" unless="skip.tests"/>
  
  <target name="clean.module.provechecker" description="cleanup module">
    <delete dir="${provechecker.output.dir}"/>
    <delete dir="${provechecker.testoutput.dir}"/>
  </target>
</project>